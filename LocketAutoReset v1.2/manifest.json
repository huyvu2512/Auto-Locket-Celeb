{
  "manifest_version": 3,
  "name": "Locket Celeb Auto Helper",
  "version": "1.0.0",
  "description": "Tự động hóa quy trình kết bạn với người nổi tiếng trên Locket",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://locket.binhake.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Locket Celeb Auto Helper"
  },
  "content_scripts": [
    {
      "matches": ["https://locket.binhake.dev/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}